<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackgroundEditTextWithBorder">
        <item name="android:background">@drawable/bg_round_gray_8_with_border_1</item>
        <item name="android:fontFamily">@font/f_roboto_regular</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/f_roboto_regular</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="ClickableView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ClickableLayout">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Matisse_Custom">
        <item name="album.dropdown.count.color">@color/color_text_secondary</item>
        <item name="album.dropdown.title.color">@color/color_text_primary</item>
        <item name="album.element.color">@color/color_text_primary</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/zhihu_album_empty_view</item>
        <item name="album.thumbnail.placeholder">@color/zhihu_album_dropdown_thumbnail_placeholder
        </item>
        <item name="bottomToolbar.apply.textColor">@color/colorAccent</item>
        <item name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/zhihu_bottom_toolbar_preview</item>
        <item name="capture.textColor">@color/zhihu_capture</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="item.checkCircle.backgroundColor">@color/colorAccent</item>
        <item name="item.checkCircle.borderColor">@color/zhihu_item_checkCircle_borderColor</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorAccent</item>
        <item name="preview.bottomToolbar.back.textColor">@color/colorAccent</item>
        <item name="toolbar">@style/ToolbarPickerMedia</item>
    </style>

    <style name="ToolbarPickerMedia"></style>

    <style name="CustomLinearProgressIndicator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="CustomPopupMenu">
        <item name="android:popupBackground">@drawable/background_popup_copy_content</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:dropDownHorizontalOffset">37dp</item>
        <item name="android:dropDownVerticalOffset">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">16sp</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleCommon</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleCommon</item>
    </style>

    <style name="NegativeButtonStyleCommon">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="paddingStart">4dp</item>
        <item name="paddingEnd">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/color_primary_60</item>
        <item name="background">@drawable/bg_round_8</item>
        <item name="backgroundTint">#ECEBEB</item>
    </style>

    <style name="PositiveButtonStyleCommon">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/bg_round_8</item>
        <item name="backgroundTint">@color/color_text_highlight</item>
    </style>

    <style name="emoji_fade_animation_style">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/f_roboto_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowAnimationStyle">@style/FullScreenDialogAnimation</item>
    </style>

    <style name="FullScreenDialogAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>