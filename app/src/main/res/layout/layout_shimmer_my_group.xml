<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <View
        android:id="@+id/skeleton_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round_8"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/skeleton_2"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintBottom_toTopOf="@id/skeleton_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_1"
        app:layout_constraintTop_toTopOf="@id/skeleton_1" />

    <View
        android:id="@+id/skeleton_3"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_1"
        app:layout_constraintTop_toBottomOf="@id/skeleton_2" />

    <View
        android:id="@+id/skeleton_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round_8"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeleton_1"/>

    <View
        android:id="@+id/skeleton_5"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintBottom_toTopOf="@id/skeleton_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_4"
        app:layout_constraintTop_toTopOf="@id/skeleton_4" />

    <View
        android:id="@+id/skeleton_6"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_4"
        app:layout_constraintTop_toBottomOf="@id/skeleton_5" />

    <View
        android:id="@+id/skeleton_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round_8"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeleton_4"/>

    <View
        android:id="@+id/skeleton_8"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintBottom_toTopOf="@id/skeleton_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_7"
        app:layout_constraintTop_toTopOf="@id/skeleton_7" />

    <View
        android:id="@+id/skeleton_9"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_7"
        app:layout_constraintTop_toBottomOf="@id/skeleton_8" />

</androidx.constraintlayout.widget.ConstraintLayout>