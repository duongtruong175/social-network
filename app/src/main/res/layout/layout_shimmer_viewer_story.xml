<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/skeleton_1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/skeleton_2"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_1"
        app:layout_constraintTop_toTopOf="@id/skeleton_1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/skeleton_3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeleton_1" />

    <View
        android:id="@+id/skeleton_4"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_3"
        app:layout_constraintTop_toTopOf="@id/skeleton_3" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/skeleton_5"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeleton_3" />

    <View
        android:id="@+id/skeleton_6"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_5"
        app:layout_constraintTop_toTopOf="@id/skeleton_5" />

</androidx.constraintlayout.widget.ConstraintLayout>