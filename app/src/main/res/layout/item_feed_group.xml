<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_group_cover"
        android:layout_width="@dimen/item_feed_group_cover_size"
        android:layout_height="@dimen/item_feed_group_cover_size"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_round_8"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/default_group_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/f_roboto_medium"
        android:maxLines="2"
        android:textColor="@color/color_text_bold"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/iv_group_cover"
        app:layout_constraintStart_toStartOf="@id/iv_group_cover"
        app:layout_constraintTop_toBottomOf="@+id/iv_group_cover" />

</androidx.constraintlayout.widget.ConstraintLayout>