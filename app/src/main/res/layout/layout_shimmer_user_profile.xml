<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/skeleton_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/color_shimmer"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/skeleton_ava_bg"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@color/color_shimmer"
        app:civ_border_color="@color/white"
        app:civ_border_width="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/skeleton_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_cover" />

    <View
        android:id="@+id/skeleton_1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_ava_bg" />

    <View
        android:id="@+id/skeleton_2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_1" />

    <View
        android:id="@+id/skeleton_3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_2" />

    <View
        android:id="@+id/skeleton_4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_3" />

    <View
        android:id="@+id/skeleton_5"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="240dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_4" />

    <View
        android:id="@+id/skeleton_6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_5" />

    <View
        android:id="@+id/skeleton_7"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_6"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_5" />

    <View
        android:id="@+id/skeleton_8"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_6" />

    <View
        android:id="@+id/skeleton_9"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_8"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_6" />

    <View
        android:id="@+id/skeleton_10"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_8" />

    <View
        android:id="@+id/skeleton_11"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/bg_round_4"
        android:backgroundTint="@color/color_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skeleton_10"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_8" />

</androidx.constraintlayout.widget.ConstraintLayout>